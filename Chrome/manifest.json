{
  "manifest_version": 2,

  "name": "LinkBox",
  "description": "Share links with friends",
  "version": "1.0",

  "icons": { 
    "16": "Linkbox-icon16.png",
    "48": "Linkbox-icon48.png",
    "128": "Linkbox-icon128.png" 
  },

  "permissions": [
    "tabs",
    "http://*/"
  ],
  
  "browser_action": {
    "default_icon": "LinkBox-icon.png",
    "default_popup": "popup.html"
  }
}